    div.col-md-4
      div.card
        div.card-block
          div.card-title Project 2
          div.card-text Yo it's a super good one
        img.img-fluid.img-thumb-nail.card-img-bottom(src='http://www.doc.govt.nz/pagefiles/169573/sirocco-kakapo-maud-island-1200.jpg' alt='me, a cute kakapo')
    div.col-md-4
      div.card
        div.card-block
          div.card-title Project 3
